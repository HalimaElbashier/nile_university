<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Batch Views -->
        <record id="view_batch_form" model="ir.ui.view">
            <field name="name">batch.form</field>
            <field name="model">school_management.batch</field>
            <field name="arch" type="xml">
                <form string="Batch Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="student_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Student Views -->
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student.form</field>
            <field name="model">school_management.student</field>
            <field name="arch" type="xml">
                <form string="Student Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="batch_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Wizard Views -->
        <record id="view_student_batch_wizard_form" model="ir.ui.view">
            <field name="name">student.batch.wizard.form</field>
            <field name="model">school_management.student_batch_wizard</field>
            <field name="arch" type="xml">
                <form string="Assign Students to Batch">
                    <group>
                        <field name="batch_id"/>
                        <field name="student_ids"/>
                    </group>
                    <footer>
                        <button name="assign_students_to_batch" string="Assign Students" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
